    "parse-json": "^8.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "yakite-bridge": "workspace:*",
    "yakite-config": "workspace:*",
    "yakite-message": "workspace:*",
    "yakite-yabai": "workspace:*",
    "zeromq": "6.0.0-beta.19"
